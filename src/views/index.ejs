<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="http://localhost:3000/upload">Upload</a>
    </div>

    <!-- Table -->
    <div>
        <table>
            <h2>List users</h2>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
            <tbody>
                </tr>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id %>
                        </td>
                        <td>
                            <%= dataUser[i].fName %>
                        </td>
                        <td>
                            <%= dataUser[i].lName %>
                        </td>
                        <td>
                            <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">Detail</a>
                            <form action="/update-user/<%= dataUser[i].id %>" method="get" style="display: inline-block;">
                                <button type="submit">Edit</button>
                            </form>
                            <form action="/delete-user" method="post" style="display: inline-block;">
                                <input type="text" hidden name="userId" value="<%= dataUser[i].id %>" >
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    <!-- Form -->
    <div class="create-user-container">
        <div style="text-align: center;">
            <h2>Create new user</h2>
        </div>
        <div  style="margin-left: 41%;">
            <form action="/create-new-user" method="post" style="width: 250px;">
                <div style="display: flex; justify-content: space-between; margin: 10px 0;">
                    <label for="">Firstname</label>
                    <input type="text" name="firstName">
                </div>
                <div style="display: flex; justify-content: space-between; margin: 10px 0;">
                    <label for="">Lastname</label>
                    <input type="text" name="lastName">
                </div>
                <div style="display: flex; justify-content: space-between; margin: 10px 0;">
                    <label for="">Email</label>
                    <input type="email" name="email">
                </div>
                <div style="display: flex; justify-content: space-between; margin: 10px 0;">
                    <label for="">Address</label>
                    <input type="text" name="address">
                </div>
                <div style="margin-top: 25px; text-align: center; ">
                    <button type="submit" style="cursor: pointer;">Submit</button>
                </div>
            </form>
        </div> 
    </div>
</body>

</html>